generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String            @id @default(cuid())
  email          String            @unique
  name           String?
  password       String?
  profileData    String?
  role           Role              @default(PLAYER)
  isActive       Boolean           @default(true)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  messagesFrom   Message[]         @relation("FromUser")
  messagesTo     Message[]         @relation("ToUser")
  applications   Application[]
  notifications  Notification[]
  verifications  Verification[]
  uploads        Upload[]
  payments       Payment[]
  trialsCreated  Trial[]           @relation("TrialCreator")
}

model Message {
  id        String   @id @default(cuid())
  fromId    String
  toId      String
  content   String
  createdAt DateTime @default(now())
  from      User     @relation("FromUser", fields: [fromId], references: [id])
  to        User     @relation("ToUser", fields: [toId], references: [id])
}

model Trial {
  id        String   @id @default(cuid())
  title     String
  city      String
  date      DateTime
  fee       Float    @default(0)
  createdById String?
  createdAt DateTime @default(now())
  createdBy User?    @relation("TrialCreator", fields: [createdById], references: [id])
  apps      Application[]
  payments  Payment[]
}

model Application {
  id        String   @id @default(cuid())
  userId    String
  trialId   String
  status    AppStatus @default(PENDING)
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
  trial     Trial     @relation(fields: [trialId], references: [id])
}

model Payment {
  id        String   @id @default(cuid())
  userId    String
  trialId   String
  amount    Float    @default(0)
  currency  String   @default("USD")
  status    String   @default("DUE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  trial     Trial    @relation(fields: [trialId], references: [id])

  @@unique([userId, trialId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  body      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Verification {
  id           String             @id @default(cuid())
  userId       String
  documentType String
  documentName String
  status       VerificationStatus @default(PENDING)
  createdAt    DateTime           @default(now())
  reviewedAt   DateTime?
  reviewedBy   String?
  user         User               @relation(fields: [userId], references: [id])
}

model Upload {
  id        String     @id @default(cuid())
  userId    String
  name      String
  type      UploadType
  url       String?
  thumbnail String?
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UploadType {
  VIDEO
  CERTIFICATE
  ACHIEVEMENT
}

enum Role {
  PLAYER
  AGENT
  ACADEMY
  ADMIN
}

enum AppStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}
