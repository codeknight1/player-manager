generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  password      String?
  profileData   String?
  role          Role           @default(PLAYER)
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  applications  Application[]
  messagesFrom  Message[]      @relation("FromUser")
  messagesTo    Message[]      @relation("ToUser")
  notifications Notification[]
  payments      Payment[]
  trialsCreated Trial[]        @relation("TrialCreator")
  uploads       Upload[]
  verifications Verification[]
}

model Message {
  id        String   @id @default(cuid())
  fromId    String
  toId      String
  content   String
  createdAt DateTime @default(now())
  from      User     @relation("FromUser", fields: [fromId], references: [id])
  to        User     @relation("ToUser", fields: [toId], references: [id])
}

model Trial {
  id          String        @id @default(cuid())
  title       String
  city        String
  date        DateTime
  createdAt   DateTime      @default(now())
  fee         Float         @default(0) @db.Real
  createdById String?
  apps        Application[]
  payments    Payment[]
  createdBy   User?         @relation("TrialCreator", fields: [createdById], references: [id])

  @@index([createdById])
}

model Application {
  id        String    @id @default(cuid())
  userId    String
  trialId   String
  status    AppStatus @default(PENDING)
  createdAt DateTime  @default(now())
  trial     Trial     @relation(fields: [trialId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
}

model Payment {
  id        String   @id @default(cuid())
  userId    String
  trialId   String
  amount    Float    @default(0) @db.Real
  currency  String   @default("USD")
  status    String   @default("DUE")
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(6)
  trial     Trial    @relation(fields: [trialId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, trialId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  body      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Verification {
  id           String             @id @default(cuid())
  userId       String
  documentType String
  documentName String
  status       VerificationStatus @default(PENDING)
  createdAt    DateTime           @default(now())
  reviewedAt   DateTime?
  reviewedBy   String?
  user         User               @relation(fields: [userId], references: [id])
}

model Upload {
  id        String     @id @default(cuid())
  userId    String
  name      String
  type      UploadType
  url       String?
  thumbnail String?
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UploadType {
  VIDEO
  CERTIFICATE
  ACHIEVEMENT
}

enum Role {
  PLAYER
  AGENT
  ACADEMY
  ADMIN
}

enum AppStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}
